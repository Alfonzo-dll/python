import discord
import time
from discord.ext import commands

intents = discord.Intents(messages=True, guilds=True, reactions=True, members=True, presences=True) # İntentsleri devreye sokuyoruz
Bot = commands.Bot(command_prefix='!', intents=intents)

@Bot.event
async def on_ready():
    print("Bot başarıyla başlatıldı!") # event döngüsü
    
    
@Bot.command(usage="örnek", name="örnek") # örnek komut 
async def komut(ctx):
    await ctx.send("Bu bir örnek komuttur.")
    
    # Birde bu satırdan sonra basit bir hoşgeldiniz ve ayrıldı mesajı yaptım.
    
@Bot.event
async def on_member_join(member):
    channel = discord.utils.get(member.guild.text_channels, name="giriş-çıkışlar")
    await channel.send(f"{member} aramıza **katıldı!**")
    

@Bot.event
async def on_member_remove(member):
    channel = discord.utils.get(member.guild.text_channels, name="giriş-çıkışlar")
    await channel.send(f"{member} aramızdan **ayrıldı!**")
    
Bot.run("Token") # Token buraya gelecek
  
